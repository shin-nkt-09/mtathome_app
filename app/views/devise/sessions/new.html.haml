.login
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2 Study support app
    .field
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例 タロウ",class:"form-text text-form"
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email",class:"form-email text-form"
    .field
      = f.password_field :password, autocomplete: "current-password",class:"form-pass text-form"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in",class:"form-btn"
    = render "devise/shared/links"
