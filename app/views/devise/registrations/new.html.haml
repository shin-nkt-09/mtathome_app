.new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    %h2 Muscle training at home
    .field
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例 タロウ", class:"new-form"
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"new-form"
    .field
      = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上", class:"new-form"
    .field
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じ", class:"new-form"
    .actions
      = f.submit "Sign up", class:"btn"
    = render "devise/shared/links"